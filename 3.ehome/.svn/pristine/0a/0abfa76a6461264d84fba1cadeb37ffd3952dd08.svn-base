@charset "utf-8";
/* CSS Document */


body {
	font-family:Microsoft Yahei,Arial, Helvetica, sans-serif; 
	color: #666666;
	background: #f8f8f8;
	font-size:14px;
}
.clear {
	clear: both;
}
body, div, ul, ol, li, form, p, input, fieldset, h1, h2, h3, h4, h5, h6, dl, dt, dd {
	margin: 0;
	padding: 0;
	list-style: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}
fieldset, img {
	border: none;
}
.clearfix{*+height:1%;}
.clearfix:after {visibility: hidden;display: block;font-size: 0;content: " ";clear: both;height: 0;}
.clearfix{*zoom:1;}

.fl{ float:left;}
.fr{ float:right;}
.h20{ height:20px; width:100%;}
.h50{ height:50px; width:100%;}
.plr10{ padding:0 10px;}
.ml20{ margin-left:20px;}
.ml10{ margin-left:10px;}
.mr12{ margin-right:12px;}
.plr10{ padding:0 10px;}
.mt10{ margin-top:10px;}
.mb10{ margin-bottom:10px;}
.mt4{ margin-top:4px;}
.font_orange{ color:#ff6000;}
.font14{ color:#909090;}
.font12{ font-size:12px;color:#909090;}
.font18{ font-size:18px; color:#ff6000;}

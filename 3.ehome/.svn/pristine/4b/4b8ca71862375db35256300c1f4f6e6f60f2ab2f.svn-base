        }
    }
  function getImgSize(obj,picUrl){
      var img = new Image();
      img.onload = function () {
          $(obj).show();
          $(obj).html("图片尺寸("+this.width+"X"+this.height+")");
      }
      img.src=picUrl;
  }
   

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.its.modules.order.dao.OrderServiceListDao">
    
	<sql id="orderServiceListColumns">
		a.id AS "id",
		a.business_info_id AS "businessInfoId",
		a.service_info_id AS "serviceInfoId",
		a.order_service_id AS "orderServiceId",
		a.order_no AS "orderNo",
		a.serial_numbers AS "serialNumbers",
		a.name AS "name",
		a.imgs AS "imgs",
		a.pay_count AS "payCount",
		a.content AS "content",
		a.base_price AS "basePrice",
		a.benefit_price AS "benefitPrice",
		a.pay_sum_money AS "paySumMoney",
		a.create_by AS "createBy.id",
		a.create_date AS "createDate",
		a.update_by AS "updateBy.id",
		a.update_date AS "updateDate",
		a.remarks AS "remarks",
		a.del_flag AS "delFlag"
	</sql>
	
	<sql id="orderServiceListJoins">
	</sql>
    
	<select id="get" resultType="OrderServiceList">
		SELECT 
			<include refid="orderServiceListColumns"/>
		FROM order_service_list a
		<include refid="orderServiceListJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="OrderServiceList">
		SELECT 
			<include refid="orderServiceListColumns"/>
		FROM order_service_list a
		<include refid="orderServiceListJoins"/>
		<where>
			a.del_flag = #{DEL_FLAG_NORMAL}
			<if test="name != null and name != ''">
				AND a.name LIKE 
					<if test="dbName == 'oracle'">'%'||#{name}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{name}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{name},'%')</if>
			</if>
            <if test="orderNo != null and orderNo != ''">
                AND a.order_no = #{orderNo}
            </if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="OrderServiceList">
		SELECT 
			<include refid="orderServiceListColumns"/>
		FROM order_service_list a
		<include refid="orderServiceListJoins"/>
		<where>
			a.del_flag = #{DEL_FLAG_NORMAL}
	    AND a.order_no = #{orderNo}
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO order_service_list(
			id,
			business_info_id,
			service_info_id,
			order_service_id,
			order_no,
			serial_numbers,
			name,
			imgs,
			pay_count,
			content,
			base_price,
			benefit_price,
			pay_sum_money,
			create_by,
			create_date,
			update_by,
			update_date,
			remarks,
			del_flag
		) VALUES (
			#{id},
			#{businessInfoId},
			#{serviceInfoId},
			#{orderServiceId},
			#{orderNo},
			#{serialNumbers},
			#{name},
			#{imgs},
			#{payCount},
			#{content},
			#{basePrice},
			#{benefitPrice},
			#{paySumMoney},
			#{createBy.id},
			#{createDate},
			#{updateBy.id},
			#{updateDate},
			#{remarks},
			#{delFlag}
		)
	</insert>
	
	<update id="update">
		UPDATE order_service_list SET 	
			business_info_id = #{businessInfoId},
			service_info_id = #{serviceInfoId},
			order_service_id = #{orderServiceId},
			order_no = #{orderNo},
			serial_numbers = #{serialNumbers},
			name = #{name},
			imgs = #{imgs},
			pay_count = #{payCount},
			content = #{content},
			base_price = #{basePrice},
			benefit_price = #{benefitPrice},
			pay_sum_money = #{paySumMoney},
			update_by = #{updateBy.id},
			update_date = #{updateDate},
			remarks = #{remarks}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		UPDATE order_service_list SET 
			del_flag = #{DEL_FLAG_DELETE}
		WHERE id = #{id}
	</update>
	
</mapper>
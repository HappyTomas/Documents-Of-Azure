	<body>
		<div id="app" v-cloak>
			<div class="grey_top">
				<a href="#" class="black_back"></a>
				选择可见范围
			</div>
			<div class="main_box" style="padding:0;">
				<div class="my_message">
					<div class="my_message_left4" @click="choice(1)"><img :src="choose==1 ? chooseUrl : chooseUrl2" width="32" height="32">
					</div>
					<div class="my_message_right2">
						<a href="../home/forward.html?type=1"><p>&nbsp;&nbsp;
							<font style="font-size:16px; color:#000;">公开</font>
						</p>
						<p>&nbsp;&nbsp;所有人可见</p>
						</a>
					</div>
					<div class="clear"></div>
				</div>
				<div class="my_message">
					<div class="my_message_left4" @click="choice(2)"><img :src="choose==2 ? chooseUrl : chooseUrl2" width="32" height="32">
					</div>
					<div class="my_message_right2">
						<a href="../home/forward.html?type=2">
						<p>&nbsp;&nbsp;
							<font style="font-size:16px; color:#000;">粉丝可见</font>
						</p>
						<p>&nbsp;&nbsp;关注我的粉丝可见</p>
						</a>
					</div>
					<div class="clear"></div>
				</div>
				<div class="my_message" style="border-bottom:none;">
					<div class="my_message_left4" @click="choice(3)"><img :src="choose==3 ? chooseUrl : chooseUrl2" width="32" height="32">
					</div>
					<div class="my_message_right2">
						<a href="../home/forward.html?type=3">
						
						<p>&nbsp;&nbsp;
							<font style="font-size:16px; color:#000;">好友可见</font>
						</p>
						<p>&nbsp;&nbsp;相互关注好友可见</p>
						</a>
					</div>
					<div class="clear"></div>
				</div>
			</div>
		</div>

		<script src="../../js/common/jquery.js"></script>
		<script src="../../js/common/bootstrap.min.js"></script>
		<script src="../../js/common/vue.js" type="text/javascript" charset="utf-8"></script>
